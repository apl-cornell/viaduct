  int{C} cin2 <- recv @chuck;

  int{C & A<-} add = endorse(cin1, {C & A<-});
  int{C & A<-} minus = endorse(cin2, {C & A<-});
  bool{A} meets_threshold = declassify(add - minus > 100, {A âŠ“ C});

  send meets_threshold to @alice;
}

process @alice {
  bool meets_threshold <- recv main;
}

process @chuck {
  send 1 to main;
  send 2 to main;
}

