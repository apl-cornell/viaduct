host alice : {A}
host bob   : {B}

process main {
  val number: int = endorse (input int from bob) to {B & A<-};
  var tries: int = 0;
  var win: bool = false;
  while (tries < 5 && !win) {
    val guess: int = declassify (input int from alice) to {(A|B)-> & A<-};
    val trusted_guess: int = endorse guess from {(A|B)-> & A<-} to {A ⊓ B};
    win = declassify (number == trusted_guess) to {A ⊓ B};
    tries += 1;
  }
  output win to alice;
  output win to bob;
}
